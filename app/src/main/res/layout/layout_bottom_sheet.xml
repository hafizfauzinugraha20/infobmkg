<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingBottom="24dp">

    <!-- Handle Garis Kecil di Atas (Indikator Geser) -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="#E0E0E0" />

    <!-- Header: Wilayah & Waktu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/bsTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 Jan 2024 â€¢ 12:30 WIB"
            android:textColor="#757575"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/bsWilayah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="12 km BaratDaya CIANJUR"
            android:textColor="#212121"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5" />

    <!-- Content Utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical">

        <!-- Magnitude Badge Besar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/bsCardMag"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#EF4444"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bsMagnitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.6"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SR"
                    android:textColor="#FFCDD2"
                    android:textSize="12sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Grid Info (Kedalaman, Koordinat) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:orientation="vertical">

            <!-- Item Kedalaman -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KEDALAMAN"
                    android:textSize="10sp"
                    android:textColor="#9E9E9E"
                    android:letterSpacing="0.1"/>
                <TextView
                    android:id="@+id/bsKedalaman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 km"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Item Koordinat -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KOORDINAT"
                    android:textSize="10sp"
                    android:textColor="#9E9E9E"
                    android:letterSpacing="0.1"/>
                <TextView
                    android:id="@+id/bsKoordinat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-6.92, 107.03"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Info Potensi Tsunami -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:padding="12dp"
        android:background="#E3F2FD"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_dialog_alert"
            app:tint="#1976D2"/>

        <TextView
            android:id="@+id/bsPotensi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Tidak berpotensi tsunami"
            android:textColor="#1565C0"
            android:textStyle="bold"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>